#!/bin/bash
source ~/.cache/wal/colors.sh
#v="$(amixer -D pulse get Master | awk -F 'Left:|[][]' 'BEGIN {RS=""}{ print $3 }' | tr -d '%')"
v="$( pamixer --get-volume | tr -d '%')"
m="$( pamixer --get-mute )"
if [[ $m = "true" ]]; then mi="$"
fi

bi="$( printf '%x\n' $v )"

if [[ $v = "0" ]]; then bi="$"
fi

sleep 0.1 | echo "^c$color9^$mi$bi"
#echo '&'
#sleep 0.1 | echo "<span fgcolor='$color9'>$mi$bi</span>"
